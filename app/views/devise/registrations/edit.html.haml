.container
  .mainbox.col-md-6.col-md-offset-3.col-sm-8.col-sm-offset-2
    .panel.panel-info
      .panel-title
        %h2 Edit #{resource_name.to_s.humanize}
      .panel-body{:style=>"padding-top:30px"}
        = simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put },input_html: { class: 'form-horizontal' }) do |f|
          = f.error_notification
          .input-group{:style=>"margin-bottom: 25px"}
            = f.input :email, required: true, autofocus: true, :class => "form-control"
          .input-group{:style=>"margin-bottom: 25px"}
            = f.input :firstname, required: true, :class => "form-control"
          .input-group{:style=>"margin-bottom: 25px"}
            = f.input :lastname, required: true, :class => "form-control"
          .input-group{:style=>"margin-bottom: 25px"}
            = f.input :password, autocomplete: "off", hint: "leave it blank if you don't want to change it", required: false
          .input-group{:style=>"margin-bottom: 25px"}
            = f.input :password_confirmation, required: false
          .input-group{:style=>"margin-bottom: 25px"}
            = f.input :current_password, hint: "we need your current password to confirm your changes", required: true
          .form-group{:style=>"margin-top:10px"}
            .col-sm-12.controls
              = f.button :submit, "Update", :class => "btn btn-success"
              = link_to "Back", :back, :class => "btn btn-success"

