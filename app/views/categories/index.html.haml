.row
  .col-md-2
  .col-md-8
    %h1 Listing categories
.row
  .col-md-2
  .col-md-8
    %table.table.flatTable
      %tr.headingTr
        %th Name
        %th
        %th
        %th

      - categories.each do |category|
        %tr
          %td= category.name
          %td{:style=>"width: 10%"}= link_to 'Show', category, :class => "btn btn-primary "
          %td{:style=>"width: 10%"}= link_to 'Edit', edit_category_path(category), :class=>"btn btn-info"
          %td{:style=>"width: 10%"}= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-warning"

%br
.row
  .col-md-2
  .col-md-8
    = link_to 'New Category', new_category_path, :class => "btn btn-info"
